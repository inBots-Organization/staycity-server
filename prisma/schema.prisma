  MAINTENANCE
  INACTIVE
}

enum RoomType {
  ROOM
  SUITE
}

enum RoomStatus {
  AVAILABLE
  OCCUPIED
  MAINTENANCE
}

enum Amenity {
  WIFI
  PARKING
  RESTAURANT
  SPA
  GYM
  POOL
