  // âš¡ Energy Levels
  lowMaxKw      Float
  mediumMaxKw   Float
  highMaxKw     Float

  // ðŸ”¥ Heatmap & Alerts
  showEnergy      Boolean @default(true)
  showCO2         Boolean @default(true)
  showTemperature Boolean @default(true)

  // ðŸ« COâ‚‚ Thresholds
  co2WarningPpm  Float
  co2CriticalPpm Float
  co2DebounceSec Float

  // ðŸŒ¡ï¸ Temperature Thresholds
  tempUnit        String   @default("Celsius") // Ø£Ùˆ Ù†Ø¹Ù…Ù„ enum
  tempHighWarning Float
  tempHighCritical Float
  tempLowWarning  Float
  tempLowCritical Float
  tempDebounceSec Float

  // âš™ï¸ Automation Logic & Timers
  entryConfirmedSec     Float
  absenceTimeMin        Float
  doorOnlyTimeoutMin    Float
  sensorBatteryTimeoutH Float
  pricePerKwh Float @default(0)
  
  // ðŸ’° Time-based Pricing (Day/Night rates)
  dayPricePerKwh   Float @default(0.24)  // 8am to 11pm
  nightPricePerKwh Float @default(0.16)  // 11pm to 8am
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("system_settings")
}

model Logs{
  id        String   @id @default(cuid())
  metric  String   
  sensor String   
  value Float
  unit  String
  time String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// Presence logs for motion/presence sensors
model PresenceLog {
  id          String   @id @default(cuid())

  // Relations
  property    Building @relation(fields: [propertyId], references: [id])
  propertyId  String

  floor       Floor    @relation(fields: [floorId], references: [id])
  floorId     String

  room        Room     @relation(fields: [roomId], references: [id])
  roomId      String
  device      Device   @relation(fields: [externalId], references: [externalId])
  externalId  String
  // Presence value (number of people detected)
  value       Int

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([propertyId])
  @@index([floorId])
  @@index([roomId])
  @@index([externalId])
  @@map("presence_logs")
}